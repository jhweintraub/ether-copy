{
    "manifest_version": 3,
    "name": "Ether-copy",
    "version": "1.0",
    "description": "Add a copy button to all addresses on etherscan",
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.etherscan.io/address*"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ]    
}